    'range': (-200, +200),
    'categories': {
        'excellent_outcome': +150 to +200,
        'good_outcome': +80 to +150,
        'acceptable_outcome': +30 to +80,
        'neutral': -30 to +30,
        'acceptable_loss': -30 to -80,
        'bad_outcome': -80 to -150,
        'terrible_outcome': -150 to -200
    }
}
