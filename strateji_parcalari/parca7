            'example': '''
            10:00 - BTCUSDT LONG
            10:20 - BTCUSDT LONG setup â†’ BLOCKED (wait 10 min)
            10:30 - BTCUSDT LONG setup â†’ ALLOWED âœ“
            '''
        },
        
        'different_direction': {
